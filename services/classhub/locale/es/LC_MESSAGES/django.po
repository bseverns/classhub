#
# ── Invite error messages (Python) ───────────────────────────────────
#

msgid "That invite link is not valid."
msgstr "Ese enlace de invitación no es válido."

msgid "That invite link has been disabled."
msgstr "Ese enlace de invitación ha sido desactivado."

msgid "That invite link has expired."
msgstr "Ese enlace de invitación ha expirado."

msgid "This invite is full right now. Ask your teacher for a new invite link."
msgstr "Esta invitación está llena en este momento. Pide a tu maestro un nuevo enlace de invitación."

msgid "That invite link is not usable right now."
msgstr "Ese enlace de invitación no se puede usar en este momento."

#
# ── Name-safety messages (Python) ────────────────────────────────────
#

msgid "That looks like an email address. Please use a nickname or display name instead."
msgstr "Eso parece una dirección de correo electrónico. Por favor, usa un apodo o nombre para mostrar."

msgid "That looks like a phone number. Please use a nickname or display name instead."
msgstr "Eso parece un número de teléfono. Por favor, usa un apodo o nombre para mostrar."

msgid "Please use a nickname or display name instead of personal information."
msgstr "Por favor, usa un apodo o nombre para mostrar en lugar de información personal."

msgid "Heads-up: that looks like an email address. A nickname is safer."
msgstr "Aviso: eso parece una dirección de correo electrónico. Un apodo es más seguro."

msgid "Heads-up: that looks like a phone number. A nickname is safer."
msgstr "Aviso: eso parece un número de teléfono. Un apodo es más seguro."

msgid "Consider using a nickname instead of personal information."
msgstr "Considera usar un apodo en lugar de información personal."

